#include<stdio.h>

int main(){
    
    int h, b, area=0;
    
    //h is the height of the triangle 
    printf("enter height of the traingle : ");
    scanf("%d", &h);
    
    //b is the base of the triangle 
    printf("enter base of the traingle : ");
    scanf("%d", &b);
    
    area= b*h/2;
    printf("Area of triangle is %d", area);
    
    return 0;
}
