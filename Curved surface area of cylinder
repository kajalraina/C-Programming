#include<stdio.h>

int main(){
    
    int r, h, csa=0;
    float pi=3.14;
    
    printf("enter the radius of cylinder : ");
    scanf("%d", &r);
    
    printf("enter the height of pyramid : ");
    scanf("%d", &h);
    
    csa= 2*pi*r*h;
    printf("Curved surface area of cylinder is %d",csa);
    
    return 0;
}
