#include<stdio.h>

int main(){
    
    int num , i=0, sum=0;
    do{
        printf("enter a number : ");
        scanf("%d", &num);
        
        while(num>i){
        i=0;
        i=i+num;
        } 
        if(num==0){
            break;
        }
    } 
    while(1);
    printf("Largest number is %d", i);
    
    return 0;
}
